{{#partial "contenido"}}	
	<title>Metodologías</title>
	<p class="title">Metodologías</p>

	{{#if}}
		<table class="table table-dark">
			<tr>
				<th class="ppal">Nombre</th>
				<th class="ppal">Ver</th>
				<th class="ppal">Borrar</th>
			</tr>
			
			{{#each}}
				<tr>
					<td>{{name}}</td>
					<td><a class="fa fa-eye" href="enterprises/{{id}}"></a></td>
					<td><a class="fa fa-trash-o clickable" onclick="erase({{id}})"></a></td>				
				</tr>
			{{/each}}
		</table>
	{{else}}
		<div class="alert alert-danger" role="alert">
  			No hay metodologias para mostrar
		</div>
	{{/if}}
	
{{/partial}}

{{>layout.hbs}}