{{#partial "contenido"}}
	
	
	
	<script src="https://code.jquery.com/jquery-3.2.1.min.js"
	    integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
	    crossorigin="anonymous">
    </script>

	<script src="/js/postIndicator.js" type="text/javascript"></script>
	
	<body style="text-align: center;">
		<title>Nuevo Indicador</title>
		
		<div class="panel panel-primary">
			<div class="panel-heading"><h3>Nuevo Indicador</h3></div>
      		<div class="panel-body">
		
				<div class="form-group" style="margin-top:5%;">
					<label class="indicatorsWindow" for="nombre">Nombre:</label>
					<input class="indicatorsWindow" id="name" type="text" placeholder="Nombre del Indicador" name="name">			
				</div>
	
				<div class="form-group">
					<label class="indicatorsWindow" for="costoEstimado">Fórmula:</label>
					<input class="indicatorsWindow" id="formula" placeholder="Fórmula del Indicador" name="formula">			
				</div>
			
				<p class="indicatorsWindow">Referencia:</p>
				<p class="indicatorsWindow">Indicadores: @&lt;nombre del indicador&gt;</p>
				<p class="indicatorsWindow">Cuentas: #&lt;nombre de la cuenta&gt;</p>
		
		
				<input onclick="postIndicator()" class="btn btn-primary btn-lg" value="Guardar">
		
			</div>
		</div>
	</body>
{{/partial}}

